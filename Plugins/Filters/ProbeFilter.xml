<ServerManagerConfiguration>
   <ProxyGroup name="filters">
      <SourceProxy name="ProbeFilter"
                   class="vtkProbeFilter"
                  label="Probe Filter">
         <Documentation
                      long_help="" 
                      short_help=""> 
         </Documentation>
       <InputProperty
                     name="Input"
                     command="SetInputConnection">
         <ProxyGroupDomain name="groups">
           <Group name="sources"/>
           <Group name="filters"/>
         </ProxyGroupDomain>
         <DataTypeDomain name="input_type">
           <DataType value="vtkDataSet"/>
         </DataTypeDomain>
         <Documentation>
           The image you want to probe.
         </Documentation>
       </InputProperty>

       <InputProperty
                     name="Source"
                     command="SetSourceConnection">
         <ProxyGroupDomain name="groups">
           <Group name="sources"/>
           <Group name="filters"/>
         </ProxyGroupDomain>
         <DataTypeDomain name="input_type">
           <DataType value="vtkImageData"/>
         </DataTypeDomain>
         <Documentation>
           The DataSet that will define the point locations to probe.
         </Documentation>
       </InputProperty>
      </SourceProxy>
   </ProxyGroup> 
</ServerManagerConfiguration>
